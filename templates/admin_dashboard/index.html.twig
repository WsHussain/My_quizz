{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Tableau de bord administrateur</h1>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Statistiques</h5>
                        {# add content here #}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Utilisateurs</h5>
                        <div class="list-group">
                            {% for user in users %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ user.email }}</strong>
                                            <small class="d-block text-muted">Rôles: {{ user.roles|join(', ') }}</small>
                                        </div>
                                        <span class="badge {% if user.isVerified %}bg-success{% else %}bg-warning{% endif %}">
                                        {{ user.isVerified ? 'Vérifié' : 'Non vérifié' }}
                                            {% if user.isverified %}
                                                <div class="btn-group">
                                                <form method="POST"
                                                      action="{{ path('connexion_reminder', {'id': user.id}) }}"
                                                      style="display: inline;">
                                                    <button type="submit"
                                                            class="btn btn-sm btn-success">
                                                        send mail
                                                    </button>
                                                </form>
                                            </div>
                                            {% endif %}
                                    </span>
                                        {% if user.isVerified %}
                                            <div class="btn-group">
                                                <form method="POST"
                                                      action="{{ path('app_admin_toggle_role', {'id': user.id, 'role': 'ADMIN'}) }}"
                                                      style="display: inline;">
                                                    <button type="submit"
                                                            class="btn btn-sm {% if 'ROLE_ADMIN' in user.roles %}btn-danger{% else %}btn-success{% endif %}">
                                                        {% if 'ROLE_ADMIN' in user.roles %}
                                                            Retirer Admin
                                                        {% else %}
                                                            Ajouter Admin
                                                        {% endif %}
                                                    </button>
                                                </form>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Configuration</h5>
                        {# add content here #}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}