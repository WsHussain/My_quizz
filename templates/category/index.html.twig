{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Categories du Quiz</h1>
      <div class="row">
        {% for categorie in categories %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ categorie.name }}</h5>
                        <a href="{{ path('app_categories', {'id': categorie.id}) }}" class="btn btn-primary">Voir les questions</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
