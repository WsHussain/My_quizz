{% extends 'base.html.twig' %}

{% block title %}{{ categorie.name }} - Questions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <a href="{{ path('app_categories') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour aux catégories
        </a>
        <h1 class="text-3xl font-bold mt-4 mb-6">{{ categorie.name }}</h1>
    </div>

    <div class="space-y-8">
        {% for question in questions %}
            <div class="bg-white rounded-lg shadow-lg p-6 transition-transform hover:scale-[1.02]">
                <h2 class="text-xl font-semibold mb-4">{{ question.question }}</h2>
                
                <div class="ml-6 space-y-3">
                    {% for reponse in question.reponses %}
                        <div class="flex items-center p-3 {% if reponse.reponseExpected %}bg-green-50{% else %}bg-gray-50{% endif %} rounded">
                            <div class="flex-1">
                                <p class="text-gray-700">{{ reponse.reponse }}</p>
                            </div>
                            {% if reponse.reponseExpected %}
                                <span class="ml-3 text-green-600">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                </span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="text-center py-8">
                <p class="text-gray-500">Aucune question n'a été trouvée pour cette catégorie.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}